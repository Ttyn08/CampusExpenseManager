<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_backround"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_top_signup"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/ic_email_login"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto"
                android:hint="Email"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="8dp"
                android:id="@+id/signup_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/lavender_border"
                android:fontFamily="@font/roboto"
                android:hint="Name"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/signup_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_age_group"
                android:drawablePadding="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lavender_border"
                android:fontFamily="@font/roboto"
                android:hint="Age"
                android:inputType="number"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/signup_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/lavender_border"
                android:fontFamily="@font/roboto"
                android:drawableLeft="@drawable/ic_phonenumbers"
                android:drawablePadding="8dp"
                android:hint="Phone"
                android:inputType="number"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_password_login"
                android:drawablePadding="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lavender_border"
                android:drawableRight="@drawable/ic_eye_closed"
                android:fontFamily="@font/roboto"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/signup_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/lavender_border"
                android:drawableRight="@drawable/ic_eye_closed"
                android:drawableLeft="@drawable/ic_password_confirm"
                android:drawablePadding="8dp"
                android:fontFamily="@font/roboto"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_border"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/loginRedirectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:text="Already have an account? Login"
                android:textColor="@color/lavender"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
